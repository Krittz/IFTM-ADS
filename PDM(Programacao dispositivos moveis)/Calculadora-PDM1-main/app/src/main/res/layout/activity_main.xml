<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnAc"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="AC"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnRootSquare"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="√"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnPow"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="x²"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="÷"
        android:textColor="@color/detailColor"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="7"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="9"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="×"
        android:textColor="@color/detailColor"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="4"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="5"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="6"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="500dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="-"
        android:textColor="@color/detailColor"
        android:textSize="25sp" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="1"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="2"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="3"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="80dp"
        android:layout_height="180dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="600dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:shadowColor="@color/detailColor"
        android:text="+"
        android:textColor="@color/detailColor"
        android:textSize="40sp" />


    <Button
        android:id="@+id/btnDot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="700dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="."
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="700dp"
        android:backgroundTint="@color/btnColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="0"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="700dp"
        android:backgroundTint="@color/detailColor"
        android:fontFamily="@font/orbitron_medium"
        android:text="="
        android:textColor="@color/numColor"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/visor"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:background="@color/screenColor"
        android:ems="10"
        android:fontFamily="@font/orbitron_medium"
        android:inputType="numberDecimal"
        android:textColor="@color/detailColor"
        android:textSize="40sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/orbitron_medium"
        android:text="( ͡° ͜ʖ ͡°)"
        android:textColor="@color/detailColor"
        android:textSize="30sp" />

</RelativeLayout>
       

