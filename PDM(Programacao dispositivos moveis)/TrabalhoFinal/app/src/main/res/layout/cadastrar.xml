<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CadastrarActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/cadastrarEmail"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_field"
            android:drawableStart="@drawable/twotone_email_24"
            android:drawablePadding="5dp"
            android:hint="Email"
            android:padding="15dp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/cadastrarSenha"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_field"
            android:drawableStart="@drawable/twotone_password_24"
            android:drawablePadding="5dp"
            android:hint="Senha"
            android:padding="15dp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/cadastrarRepetirSenha"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/input_field"
            android:drawableStart="@drawable/twotone_password_24"
            android:drawablePadding="5dp"
            android:hint="Confirmar senha"
            android:padding="15dp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCadastrar"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttons"
            android:text="Cadastrar"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center">

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="150dp"
                android:layout_height="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ou"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:translationX="15dp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_marginStart="30dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttons"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>